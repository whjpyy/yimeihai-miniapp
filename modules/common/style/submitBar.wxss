
page {
  padding-bottom: 100rpx;
}
.co__submit-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-top: rgba(211, 211, 211, .33) solid 1rpx;
  width: 100%;
  height:100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}
.co__submit-bar .text {
  font-size:36rpx;
  font-weight:bold;
  color:rgba(230,133,77,1);
  line-height: 100rpx;
  padding-left: 25rpx;
  flex: 1;
}
.co__submit-bar .btn {
  width: 33.33%;
  height:100rpx;
  display: block;
  font-size:30rpx;
  font-weight:800;
  text-align: center;
  line-height: 100rpx;
  border-radius: 0;
}
.co__submit-bar .red-btn {
  background:rgba(255,68,68,1);
  color:rgba(255,255,255,1);
}
.co__submit-bar .orange-btn {
  background:rgba(248,154,70,1);
  color:rgba(255,255,255,1);
}