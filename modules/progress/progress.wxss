
.top {
  width: 100%;
  height:231rpx;
  padding: 30rpx 25rpx;
}
.top .title {
  font-size:36rpx;
  font-weight:500;
  line-height:1;
}
.top .ico {
  width: 45rpx;
  height: 45rpx;
  margin: 0 auto;
  position: relative;
}
.top .item:last-child .ico::after {
  display: none;
}
.top .ico image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
  z-index: 2;
}
.top .text {
  font-size:30rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:1;
  margin-top: 22rpx;
}
.top .progress {
  margin-top: 22rpx;
  display: flex;
  justify-content: space-between;
}

.order, .order .ico image {
  background:rgba(255,86,97,1);
}
.order .title {
  color:rgba(255,255,255,1);
}
.order .ico::after {
  content: '';
  width: 254rpx;
  height:11rpx;
  background:rgba(255,255,255,1);
  position: absolute;
  top: 20rpx;
  left: 43rpx;
  z-index: 1;
}
.order .item:last-child .ico::after {
  display: none;
}

.kiting, .kiting .ico image,
.active, .active .ico image {
  background:rgba(250,159,76,1);
}
.kiting .title, .active .title {
  color:rgba(255,255,255,1);
}
.kiting .ico::after {
  content: '';
  width: 174rpx;
  height:11rpx;
  background:rgba(255,255,255,1);
  position: absolute;
  top: 20rpx;
  left: 43rpx;
  z-index: 1;
}

.active .ico::after {
  content: '';
  width: 185rpx;
  height:11rpx;
  background:rgba(255,255,255,1);
  position: absolute;
  top: 20rpx;
  left: 43rpx;
  z-index: 1;
}