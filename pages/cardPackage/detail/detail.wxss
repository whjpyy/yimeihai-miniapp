/* pages/cardPackage/detail/detail.wxss */
@import '/modules/common/style/remark.wxss';
@import '/modules/common/style/submitBar.wxss';
@import '/modules/common/style/card.wxss';
@import '/modules/common/style/form.wxss';

.top {
  width: 100%;
  height: 370rpx;
  position: relative;
}
.top .bg {
  width: 100%;
  height: 100%;
}
.top .detail {
  width: 100%;
  height: 100%;
  padding: 50rpx 40rpx 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  line-height: 40rpx;
}
.top .name {
  font-size:39rpx;
  font-weight:800;
  color:rgba(229,204,130,1);
  margin: 25rpx 50rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.top .period {
  font-size:26rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin: 14rpx 50rpx 0;
}
.top .code {
  font-size:40rpx;
  font-weight:800;
  color:rgba(255,255,255,1);
  text-align: center;
  margin-top: 55rpx;
}
.top .lab {
  font-size:24rpx;
  font-weight:500;
  color:rgba(175,174,174,1);
  margin-top: 25rpx;
  text-align: center;
}

.to-other .item:last-child, .merchs navigator:last-child {
  border-bottom:rgba(211, 211, 211, .33) solid 1rpx;
}

page {
  padding-bottom: 0;
}
.content {
  padding-bottom:30rpx;
}
.content-bottom {
  min-height: 100%;
  padding-bottom:130rpx;
}

.rules .li {
  word-break: break-all;
}