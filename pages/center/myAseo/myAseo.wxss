/* pages/center/myAseo/myAseo.wxss */
.bg {
  width: 100%;
  height: 100%;
  min-height: 1034rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.content {
  padding-top: 640rpx;
  position: relative;
  z-index: 2;
}
.qr-code .img {
  width:234rpx;
  height:234rpx;
  /* box-shadow:0rpx 1rpx 7rpx 2rpx rgba(7,39,102,0.49); */
  margin: 0 auto;
}
.qr-code .img image {
  width: 100%;
  height: 100%;
}
.qr-code text {
  display: block;
  font-size:24rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  text-align: center;
  line-height:70rpx;
}

.record {
  z-index: 2;
  width:390rpx;
  height:80rpx;
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  background:rgba(255,181,94,1);
  box-shadow:0rpx 1rpx 0rpx 0rpx rgba(0, 0, 0, 0.49);
  border-radius:36rpx;
  margin: 0 auto;
  font-size:35rpx;
  font-weight:bold;
  text-align: center;
  color:rgba(255,255,255,1);
  line-height:80rpx;
  text-shadow:0rpx 1rpx 0rpx rgba(0, 0, 0, 0.49);
}