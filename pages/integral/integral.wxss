/* pages/integral/integral.wxss */
@import '/modules/common/style/integral.wxss';

.top {
  width: 100%;
  height:405rpx;
  background:linear-gradient(0deg,rgba(255,113,108,1) 0%,rgba(255,125,91,1) 100%);
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.top .title {
  margin-top: 53rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(255,255,255,.6);
  text-align: center;
}
.top .integral {
  font-size:54rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  margin-top: 22rpx;
}
.top .btn navigator {
  width:156rpx;
  display: inline-block;
  padding: 11rpx;
  vertical-align: baseline;
  border:1rpx solid rgba(255,255,255,1);
  border-radius:27rpx;
  margin-top: 22rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 1;
}

page {
  padding-top: 310rpx;
}

.detail {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding-top: 15rpx;
  position: relative;
  z-index: 2;
}

.not-vip {
  position: relative;
  top: -310rpx;
}