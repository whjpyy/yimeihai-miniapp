/* pages/serveItem/serveItem.wxss */
.list {
  padding: 0 28rpx;
}
.list .item {
  margin: 40rpx 0 0;
}
.list .item:nth-child(even) {
  float: right;
}
.list .item:nth-child(odd) {
  float: left;
}
.list .item image {
  width:332rpx;
  height:308rpx;
  border-radius: 5rpx;
}
.list .name {
  height:27rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height: 27rpx;
  margin-top: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list .tags {
  font-size: 0;
  white-space: nowrap;
  margin-top: 10rpx;
}
.list .tags text {
  border:1rpx solid rgba(241,182,109,1);
  border-radius:8rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(249,167,65,1);
  text-align: center;
  line-height: 34rpx;
  vertical-align: middle;
  display: inline-block;
  padding: 0 5rpx;
}