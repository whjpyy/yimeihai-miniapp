/* pages/serveDetail/serveDetail.wxss */
/* banner */
.banner {
  width: 100%;
  height: 435rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.banner image {
  width: 100%;
  height: 100%;
}
.banner .wx-swiper-dots {
  top: 325rpx;
}
.banner .wx-swiper-dot{
    width:12rpx;
    height: 12rpx; 
    display: inline-flex;
    justify-content: space-between;
}
.banner .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;  
    background: rgba(0,0,0,.3);
    border-radius: 0;
}
.banner .wx-swiper-dot-active::before{
    background:rgba(255,255,255,1);    
}
/* 信息 */
page {
  padding-top: 360rpx;
}
.infos {
  min-height: 105rpx;
  background-color: #fff;
  box-shadow: 0 3rpx 30rpx rgba(94,94,94,.2);
  width: 700rpx;
  border-radius: 10rpx;
  margin: 0 auto 15rpx;
  padding: 35rpx 30rpx;
  position: relative;
  z-index: 2;
}
.infos .name {
  font-size:32rpx;
  font-weight:bold;
  color:rgba(3,3,3,1);
  line-height:52rpx;
}
.infos .tag {
  min-width:103rpx;
  height:34rpx;
  background:rgba(254,135,125,1);
  border-radius:2rpx;
  padding: 0 20rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-align: center;
  margin-left: 40rpx;
}
/* 介绍 */
.intro .detail {
  width: 700rpx;
  margin: 0 auto;
}
.intro .detail view {
  color: #383838;
  font-size: 30rpx;
  text-align: justify;
  word-break: break-all;
  line-height: 40rpx;
}
.intro .detail image {
  width: 100%;
}