/* pages/vipCard/cardDetail/cardDetail.wxss */
@import '/modules/common/style/remark.wxss';
@import '/modules/common/style/submitBar.wxss';
@import '/modules/common/style/card.wxss';

.top {
  width: 100%;
  height: 500rpx;
  position: relative;
}
.top .bg {
  width: 100%;
  height: 100%;
}
.top .detail {
  width: 100%;
  height: 100%;
  padding: 40rpx 40rpx 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  line-height: 40rpx;
}
.top .name {
  font-size:39rpx;
  font-weight:800;
  color:rgba(229,204,130,1);
  margin: 25rpx 50rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.top .period {
  font-size:26rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin: 14rpx 50rpx 0;
}
.top .btn {
  height:107rpx;
  background:rgba(255,135,126,0);
  border-radius:10rpx;
  font-size:36rpx;
  font-weight:800;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 107rpx;
  margin-top: 40rpx;
}
.top .lab {
  font-size:24rpx;
  font-weight:500;
  color:rgba(175,174,174,1);
  line-height:77rpx;
  text-align: center;
}
.top .box {
  padding: 30rpx;
}
.top .cond {
  font-size:28rpx;
  font-weight:800;
  color:rgba(102,102,102,1);
}
.top .cond:before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  background:rgba(248,227,167,1);
  vertical-align: baseline;
  margin-right: 15rpx;
}
.top .price {
  font-size:36rpx;
  font-weight:bold;
  color:rgba(230,133,77,1);
}
.top .price .t {
  font-size:28rpx;
  font-weight:800;
  color:rgba(102,102,102,1);
}
.top .price .unit {
  font-size:17rpx;
  font-weight:bold;
  color:rgba(137,137,137,1);
  margin-left: 5rpx;
}
.rules .li {
  word-break: break-all;
}