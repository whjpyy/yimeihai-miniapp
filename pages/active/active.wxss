/* pages/active/active.wxss */
@import '/modules/common/style/remark.wxss';
@import '/modules/common/style/submitBar.wxss';

.banner {
  height: 408rpx;
}
.banner image {
  width: 100%;
  height: 100%;
}

.intro .title {
  padding: 30rpx 0;
}
.intro .title view {
  font-size: 32rpx;
  color: #f96482;
}
.intro .title image {
  width: 79rpx;
  height: 23rpx;
}
.intro .title .f {
  margin-right: 15rpx;
}
.intro .title .e {
  margin-left: 15rpx;
  transform: rotate(180deg);
}
.intro .t {
  position: relative;
}
.intro .rule {
  color: #999999;
  font-size: 24rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 25rpx;
  z-index: 2;
}
.intro .img image {
  width: 100%;
  height: 355rpx;
}

.m-items {
  width: 700rpx;
  margin: 0 auto;
}

.use-rule {
  border-top: rgba(249,249,249,1) solid 21rpx;
}
.use-rule .li {
  word-break: break-all;
}